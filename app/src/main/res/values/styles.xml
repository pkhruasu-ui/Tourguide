<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/TourGuideTabStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TourGuideTabStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="cardLayout">
        <item name="android:layout_height">109dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="cardInfoContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_toRightOf">@+id/list_item_icon</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="cardImage">
        <item name="android:layout_width">@dimen/list_item_height</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/card_image_placeholder</item>
    </style>

    <style name="cardTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:text">@string/card_title_placeholder</item>
    </style>

    <style name="cardRating" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:theme">@style/RatingBar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_below">@id/title</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">3.5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="cardDescription">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_below">@id/rating</item>
        <item name="android:text">@string/card_description_placeholder</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="android:background">@drawable/tab_category_selector</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
